<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bf5700"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/contact_form_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:text="Create New Place"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="26sp"
            android:typeface="serif" />

        <EditText
            android:id="@+id/text_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="Name"
            android:longClickable="false"
            android:textIsSelectable="true"
            android:textCursorDrawable="@drawable/cursor_color" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Theme"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/as_space"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="////"
                android:textSize="18sp"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/spinner_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overlapAnchor="false"
                android:pointerIcon="arrow"
                android:popupBackground="@color/colorPrimaryDark"
                android:popupElevation="18sp"
                android:spinnerMode="dialog" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/label_tags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text=" Tags"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/as_space_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="//////"
                android:textSize="18sp"
                android:visibility="invisible" />

            <Spinner
                android:id="@+id/spinner_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overlapAnchor="false"
                android:pointerIcon="arrow"
                android:popupBackground="@color/colorPrimaryDark"
                android:popupElevation="18sp"
                android:spinnerMode="dialog" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_loc"
                android:layout_width="113dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="fill|fill_horizontal|fill_vertical"
                android:text="Get location"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/as_space_"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:text="///"
                android:textSize="18sp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/text_loc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Latitude: Longitude" />

        </LinearLayout>

        <EditText
            android:id="@+id/text_intro"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:breakStrategy="balanced"
            android:fitsSystemWindows="true"
            android:gravity="top"
            android:hint="Intro"
            android:inputType="textMultiLine"
            android:padding="5dp"
            android:singleLine="false"
            android:longClickable="false"
            android:textIsSelectable="true"
            android:textCursorDrawable="@drawable/cursor_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="130sp"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|fill_vertical"
                    android:text="Pick images"
                    android:textSize="12sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:srcCompat="@tools:sample/avatars" />

        </LinearLayout>

        <Button
            android:id="@+id/button_reset"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Reset"
            android:textColor="#fff" />

        <Button
            android:id="@+id/button_submit"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:elevation="4dp"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="SUBMIT"
            android:textColor="#fff" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>